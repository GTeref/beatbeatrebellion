{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "beatbeatrebellion",
  "version": "0.1.0",
  "identifier": "com.beatbeatrebellion.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "beatbeatrebellion",
        "width": 800,
        "height": 600,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["**/*.mp3", "**/*.wav", "**/*.ogg", "**/*.flac", "$HOME/Music/**", "$DOCUMENTS/**", "**/*.m4a"],
        "requireLiteralLeadingDot": false
      },
      "readFile": true,
      "readDir": true
    },
    "dialog": {
      "open": true,
      "save": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
